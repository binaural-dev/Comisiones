<odoo>
    <data>
        <!--Agregar campos compania en formulario de categoria de producto-->
        <record id="binaural_inventario_product_category_inh_form" model="ir.ui.view">
            <field name="name">Binaural_inventario_product_category_form_inh</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='first']" position="before">
                    <group>
                        <field name="company_id"/>         
                    </group>
                </xpath>
            </field>
        </record> 
    </data>
</odoo>