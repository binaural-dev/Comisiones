<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">

        <record id="view_account_payment_register_form" model="ir.ui.view">
            <field name="name">account.payment.register.form</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="arch" type="xml">
                <!--add nro control-->
                <xpath expr="//field[@name='partner_bank_id']" position="after">
                    <field name="default_is_igtf_config" invisible="1"/>
                    <field name="is_igtf" attrs="{'invisible' : [('default_is_igtf_config', '=' ,False)]}"/>
                    <div class="align-middle" attrs="{'invisible' : [('is_igtf', '=',False)]}">
                        <span class="oe_title">
                        IGTF(<field name="igtf_percentage"/>)%:
                        </span>
                        <field name="amount_with_igtf"/>
                    </div>
                </xpath>
            </field>
        </record>
    
    </data>
    

</odoo>
