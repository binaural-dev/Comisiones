<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
    
        <record id="view_account_payment_igtf" model="ir.ui.view">
            <field name="name">view.account.payment.igtf</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='partner_bank_id']" position="after">
                    <field name="default_is_igtf_on_foreign_exchange" invisible="1"/>
                    <field name="is_igtf_on_foreign_exchange" attrs="{'invisible' : [('default_is_igtf_on_foreign_exchange', '=' ,False)]}"/>
                    <div class="align-middle" attrs="{'invisible' : [('is_igtf_on_foreign_exchange', '=',False)]}">
                        <span class="oe_title">
                        IGTF(<field name="igtf_percentage_on_foreign_exchange"/>)%:
                        </span>
                        <field name="amount_igtf_foreign_exchange"/>
                    </div>
                </xpath>
            </field>
        </record>
    
    </data>
    

</odoo>
