<odoo>
    <data>
        <record id="product_template_only_form_view_product_template_brand" model="ir.ui.view">
            <field name="name">product.template.form.inherit.product.template.brand</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="brand_id"/>
                </xpath>
            </field>
        </record>
        <record id="product_template_only_tree_view_product_brand" model="ir.ui.view">
            <field name="name">product.template.form.inherit.product.template.brand</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="account.product_template_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="brand_id"></field>
                </xpath>
            </field>
        </record> 
    </data>
</odoo>