<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="hr_payslip_by_employees_view_inh" model="ir.ui.view">
      <field name="name">hr_payslip_employees_inh</field>
      <field name="model">hr.payslip.employees</field>
      <field name="inherit_id" ref="hr_payroll.view_hr_payslip_by_employees"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='structure_id']" position="replace">
          <div>
            <label for="structure_type_id" string="Tipo de estructura"/>
            <field name="structure_type_id" options="{'no_create': True}"/>
            <label for="structure_id" string="Estructura"/>
            <field name="structure_id" options="{'no_create': True}"/>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
