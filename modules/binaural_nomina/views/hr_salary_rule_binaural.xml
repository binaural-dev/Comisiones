<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_salary_rule_form_inherit_binaural_nomina" model="ir.ui.view">
        <field name="name">hr.salary.rule.binaural.view.form.inherit</field>
        <field name="model">hr.salary.rule</field>
        <field name="inherit_id" ref="hr_payroll.hr_salary_rule_form"/>
        <field name="arch" type="xml">
          <field name="appears_on_payslip" position="after">
            <field name="is_a_days_rule"/>
            <field name="is_a_hours_rule"/>
          </field>
          <xpath expr="//sheet" position="after">
            <div class="oe_chatter">
              <field name="message_follower_ids"/>
              <field name="activity_ids"/>
              <field name="message_ids"/>
            </div>
          </xpath>
        </field>
    </record>

</odoo>
