<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="hr_payslip_payment_methods_view_tree" model="ir.ui.view">
      <field name="name">Metodos de pago</field>
      <field name="model">hr.payslip.payment.methods</field>
      <field name="arch" type="xml">
        <tree string="Metodos de pago">
          <field name="bank_id"/>
          <field name="date_from"/>
          <field name="date_to"/>
          <field name="total"/>
        </tree>
      </field>
    </record>

    <record id="hr_payslip_payment_methods_view_form" model="ir.ui.view">
      <field name="name">Metodos de pago</field>
      <field name="model">hr.payslip.payment.methods</field>
      <field name="arch" type="xml">
        <form string="Metodos de pago">
          <sheet>
            <group>
              <field name="bank_id"/>
              <field name="date_from"/>
              <field name="date_to"/>
              <field name="total"/>
            </group>
            <group>
              <field name="payslip_ids">
                <tree string="Recibos de nomina">
                  <field name="account_number"/>
                  <field name="employee_prefix_vat"/>
                  <field name="employee_vat"/>
                  <field name="net_wage"/>
                </tree>
              </field>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_view_hr_payslip_payment_methods" model="ir.actions.act_window">
      <field name="name">Metodos de pago</field>
      <field name="res_model">hr.payslip.payment.methods</field>
      <field name="view_mode">tree,form</field>
    </record>
  </data>
</odoo>
