<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="hr_department_view_form_inh" model="ir.ui.view">
      <field name="name">hr.department.form</field>
      <field name="model">hr.department</field>
      <field name="inherit_id" ref="hr.view_department_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='parent_id']" position="after">
          <field name="default_accounting_analytical" invisible="1"/>
          <field name="accounting_analytical_id" require="1" attrs="{'invisible': [('default_accounting_analytical','=', False)]}"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
