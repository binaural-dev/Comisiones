<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_payroll_benefits_accumulated_detail_view_search" model="ir.ui.view">
            <field name="name">hr.payroll.benefits.accumulated.detail.view.search</field>
            <field name="model">hr.payroll.benefits.accumulated.detail</field>
            <field name="arch" type="xml">
            <search string="Detalle acumulado de prestaciones">
                <field name="employee_id"/>
                <separator/>
                <group>
                <filter name="group_employee" string="Empleado"
                    domain="[]" context="{'group_by': 'employee_id'}"/>
                <filter name="group_date" string="Fecha"
                    domain="[]" context="{'group_by': 'date'}"/>
                </group>
            </search>
            </field>
        </record>

        <record id="hr_payroll_benefits_accumulated_detail_view_tree" model="ir.ui.view">
            <field name="name">hr.payroll.benefits.accumulated.detail.view.tree</field>
            <field name="model">hr.payroll.benefits.accumulated.detail</field>
            <field name="arch" type="xml">
                <tree string="Detalle acumulado de prestaciones">
                    <field name="employee_id" readonly="1"/>
                    <field name="date" readonly="1"/>
                    <field name="amount" readonly="1"/>
                    <field name="accumulated_amount" readonly="1"/>
                    <field name="type" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="hr_payroll_benefits_accumulated_detail_action" model="ir.actions.act_window">
            <field name="name">Detalle acumulado de prestaciones</field>
            <field name="res_model">hr.payroll.benefits.accumulated.detail</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>
