<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

	<record id="hr_payroll_benefits_accumulated_view_search" model="ir.ui.view">
	    <field name="name">hr.payroll.benefits.accumulated.view.search</field>
	    <field name="model">hr.payroll.benefits.accumulated</field>
	    <field name="arch" type="xml">
		<search string="Acumulado de prestaciones">
		    <field name="employee_id"/>
		    <separator/>
		    <group>
			<filter name="group_employee" string="Empleado"
				domain="[]" context="{'group_by': 'employee_id'}"/>
			<filter name="group_date" string="Fecha"
				domain="[]" context="{'group_by': 'date'}"/>
		    </group>
		</search>
	    </field>
	</record>

	<record id="hr_payroll_benefits_accumulated_view_tree" model="ir.ui.view">
	    <field name="name">hr.payroll.benefits.accumulated.view.tree</field>
	    <field name="model">hr.payroll.benefits.accumulated</field>
	    <field name="arch" type="xml">

		<tree string="Acumulado de prestaciones" editable="bottom">
		    <field name="employee_id"/>
		    <field name="date"/>
		    <field name="accumulated_benefits"/>
		    <field name="accumulated_benefits_advance"/>
		    <field name="available_benefits"/>
		    <field name="accumulated_interest"/>
		</tree>
	    </field>
	</record>

	<record id="hr_payroll_benefits_accumulated_action" model="ir.actions.act_window">
	    <field name="name">Acumulado de prestaciones</field>
	    <field name="res_model">hr.payroll.benefits.accumulated</field>
	    <field name="view_mode">tree,form</field>
	</record>

    </data>
</odoo>
