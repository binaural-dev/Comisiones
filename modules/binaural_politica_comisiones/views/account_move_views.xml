<odoo>
    <data>    
        <record id="binaural_politica_comisiones_view_form_inherit" model="ir.ui.view">
            <field name="name">binaural.politica.comisiones.account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_user_id']" position="after">
                    <field name="seller_id" readonly="1"/>
                    <field name="last_payment_date" invisible="1"/>
                    <field name="is_commission_payment" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="account_move_view_form_inherit" model="ir.ui.view">
            <field name="name">binaural.account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="readonly">True</attribute>
                </xpath>
                <xpath expr="//field[@name='correlative']" position="attributes">
                    <attribute name="attrs">
                        {
                            'invisible': [('move_type', 'not in', ('in_invoice','in_refund','out_invoice', 'out_refund'))],
                            'readonly':[('is_contingence','=',False),('move_type','in',('out_invoice','out_refund'))],
                            'required': ['|',('is_contingence','=',True), ('move_type','in',('in_invoice','in_refund')), ('is_commission_payment','=',False)]
                        }
                    </attribute>
                </xpath>
            </field>
        </record>

        <record id="seller_account_invoice_filter_inherit" model="ir.ui.view">
            <field name="name">account.invoice.select.inherit.account_3way_match</field>
            <field name="mode">primary</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='duedate']" position='after'>
                    <separator/>
                    <filter name="group_seller_id" string="Seller" context="{'group_by':'seller_id'}"/>
                    <separator/>
                </xpath>
            </field>
        </record>

        <record id="seller_view_out_invoice_tree" model="ir.ui.view">
            <field name="name">seller.account.out.invoice.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='correlative']" position="after">
                    <field name="commission_invoice" widget="many2many_tags" string="Factura de comisión"/>
                </xpath>

                <xpath expr="//field[@name='correlative']" position="attributes">
                   <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='vat']" position="attributes">
                   <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='address']" position="attributes">
                   <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='financial_document']" position="attributes">
                   <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='amount_total_signed']" position="before">
                    <button name="show_invoice_resume" icon="fa-list" string="Comisiones" type="object"/> 
                    <field name="total_commission" widget="monetary"/>
                    <field name="commission_discount"/>
                    <field name="discount_invoice" widget="many2many_tags" string="Notas de crédito"/>
                </xpath>

                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="last_payment_date" string="Fecha de último pago"/>
                    <field name="collection_days" string="Días de cobro"/>
                    <field name="invoice_payment_term_id" invisible="1"/>
                    <field name="invoice_date_due"/>
                </xpath>

                <xpath expr="//field[@name='amount_total_signed']" position="after">
                    <field name="paid_seller" widget="badge" decoration-muted="paid_seller == 'not_paid'"
                           decoration-success="paid_seller == 'paid'" decoration-info="paid_seller == 'process'"
                           optional="show"/>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="invoice_origin" invisible="1"/>
                    <field name="seller_id"/>
                </xpath>

                <xpath expr="//field[@name='invoice_date_due']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='activity_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='amount_untaxed_signed']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>

        <record id="seller_action_move_out_invoice_type" model="ir.actions.act_window">
            <field name="name">Facturas de ventas por vendedor</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="seller_view_out_invoice_tree"/>
            <field name="search_view_id" ref="seller_account_invoice_filter_inherit"/>
            <field name="domain">[('move_type', '=', 'out_invoice'),('payment_state', 'in', ['paid', 'in_payment'])]
            </field>
            <field name="context">{'default_move_type': 'out_invoice', 'search_default_group_seller_id': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    View seller commission invoices
                </p>
                <p>
                    keep track of invoices with your customers and commission for sellers.
                </p>
            </field>
        </record>

        <menuitem id="employ" parent="account_accountant.menu_accounting"
                  name="Comisiones"
                  sequence="3"/> 

        <menuitem id="seller_account" parent="employ"
                  action="seller_action_move_out_invoice_type"
                  sequence="2"/> 
    </data>
</odoo>
