<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_binaural_policy_commissions" model="ir.ui.view">
        <field name="name">Comisiones</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
	        <xpath expr="//div[@id='invoicing_settings']" position="after">
                <div id="invite_users">
                    <h2>Configuraci√≥n de Comisiones</h2>
                    <div class="row mt16 o_settings_container" name="lel">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="col-3 col-lg-3 o_setting_box">
                                    <div>
                                        <div class="mt16 row">
                                           <span class="o_form_label">departamento</span>
                                           <field name="seller_department" class="oe_inline" widget="many2one_tags"/> 
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="col-3 col-lg-3 o_setting_box">
                                    <div>
                                        <div class="mt16 row">
                                           <span class="o_form_label">Producto para pago de Comisiones</span>
                                           <field name="commission_product_id" class="oe_inline" widget="many2one_tags"/> 
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="col-3 col-lg-3 o_setting_box">
                                    <div>
                                        <div class="mt16 row">
                                           <span class="o_form_label">Diario</span>
                                           <field name="commission_journal_id" class="oe_inline" widget="many2one_tags"/> 
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
			</xpath>
        </field>
    </record>
</odoo>
