<odoo>
    <record id="product_pricelist_item_form_view" model="ir.ui.view">
        <field name="name">product.pricelist.item.form (in binaural_latest_standard_price)</field>
        <field name="model">product.pricelist.item</field>
        <field name="inherit_id" ref="product.product_pricelist_item_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='base']/following-sibling::div" position="inside">
                <span attrs="{'invisible':[('base', '!=', 'latest_standard_price')]}">Latest Cost  -  </span>
            </xpath>
        </field>
    </record>
</odoo>
