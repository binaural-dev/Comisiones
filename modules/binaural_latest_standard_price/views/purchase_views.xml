<odoo>
    <record id="purhcase_order_form_view" model="ir.ui.view">
        <field name="name">purchase.order.form (in binaural_latest_standard_price)</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                <field name="latest_standard_price"/>

                <!--
                    This field needs to be readonly when the purchase is confirmed because it's used
                    to know if the latest standard price of the product was changed when the
                    button_confirm action was executed.
                -->
                <field
                    name="update_latest_standard_price"
                    attrs="{'readonly': [('state', '=', 'purchase')]}"
                />
            </xpath>
        </field>
    </record>
</odoo>
