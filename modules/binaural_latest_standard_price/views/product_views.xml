<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form (in binaural_latest_standard_price)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <div name="standard_price_uom" position="after">
                <field name="variants_are_active" invisible="1"/>
                <!--
                    When product variants are active, the user should not be able to change the latest
                    standard price of the product template.
                -->
                <field
                    name="latest_standard_price"
                    attrs="{'readonly': [('variants_are_active', '=', True), ('is_product_variant', '=', False)]}"
                />
            </div>
        </field>
    </record>

    <record id="product_product_tree_view" model="ir.ui.view">
        <field name="name">product.product.tree (in binaural_latest_standard_price)</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <field name="standard_price" position="after">
                <field name="latest_standard_price"/>
            </field>
        </field>
    </record>

    <record id="product_variant_easy_edit_view" model="ir.ui.view">
        <field name="name">product.product.form (in binaural_latest_standard_price)</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <field name="standard_price" position="after">
                <field name="latest_standard_price"/>
            </field>
        </field>
    </record>
</odoo>
